<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FHresMapper">
	
	<!--表名 -->
	<sql id="tableName">
		AUTHORITY_RESOURCE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		ID,
		NAME,
		DESCRIPTION,
		PACKAGENAME,
		CLASSNAME,
		REQUESTMAPPING,
		METHODNAME,
		PARAMETERTYPES,
		SCAN_STATUS,
		USESTATUS,
		RETURNTYPE,
		VIEWNAME
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ID},	
		#{NAME},	
		#{DESCRIPTION},	
		#{PACKAGENAME},
		#{CLASSNAME},	
		#{REQUESTMAPPING},	
		#{METHODNAME},	
		#{PARAMETERTYPES},
		#{SCAN_STATUS},	
		#{USE_STATUS},	
		#{RETURNTYPE},	
		#{VIEWNAME}
	</sql>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
					NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					or
					REQUESTMAPPING LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
		order by PACKAGENAME, NAME desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- fh313596790qq(青苔) -->
</mapper>